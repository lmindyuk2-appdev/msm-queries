<h1>
  Actor <%= @actor.id %> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/<%=@actor.id%>" class="btn btn-block btn-outline-secondary">
  Delete actor
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%=@actor.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%=@actor.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%=@actor.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <%=@actor.image%>
  </dd>
  <dt>
    Image
  </dt>
  <dd>
    <%=@actor.image%>
  </dd>


  <dt>
    Created at
  </dt>
  <dd>
    <%=time_ago_in_words(@actor.created_at)%> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    a<%=time_ago_in_words(@actor.updated_at)%> ago
  </dd>
</dl>

<h2>Filmography</h2>

<table border="1">  
  <tr>
    <th>
      Title 
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>

    </th>
  </tr>
  <% @characters.each do |a_character|%>
  <% a_film = Movie.where({ :id => a_character.movie_id }).at(0)%>  
  <tr>
    <td>
      <%= a_film.title%>
    </td>

    <td>
      <%= a_film.year%>
    </td>

    <td>
      <% d = Director.where({ :id => a_film.director_id }).at(0) %>
      <%= d.name %>
    </td>
    <td>
      <%= a_character.name %>
    </td>
    <td>
      <a href="/movies/<%= a_film.id%>">
        Show details
      </a>
    </td>
  </tr>
<% end%>
</table>
